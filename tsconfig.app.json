{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "resources/**/*.vue",
        "resources/**/*.tsx",
        "resources/**/*.ts"
    ],
    "exclude": [
        "resources/**/__tests__/*"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "strict": true,
        "composite": true,
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/*"
            ]
        }
    }
}
